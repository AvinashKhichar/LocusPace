<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top App Bar / Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_app_tutorial"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#B58668"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/arrow"
        app:title="@string/tutorial_title"
        app:titleTextColor="?attr/colorOnPrimary" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_app_tutorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_app_tutorial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Intro -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_intro"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="16dp" />

            <!-- Getting Started -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_getting_started_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_getting_started_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp" />

            <!-- Starting a Run -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_start_run_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_start_run_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp" />

            <!-- During Run -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_during_run_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_during_run_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp" />

            <!-- Finish Run -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_finish_run_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_finish_run_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp" />

            <!-- History -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_history_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_history_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="16dp" />

            <!-- Tips -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_tips_heading"
                android:textSize="18sp"
                style="@style/h4"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tutorial_tips_body"
                android:textSize="14sp"
                style="@style/h2"
                android:lineSpacingExtra="3dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
