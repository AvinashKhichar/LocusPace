<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top App Bar / Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#B58668"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/arrow"
        style="@style/h4"
        app:title="@string/app_name"
        app:titleTextColor="?attr/colorOnPrimary" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">



            <!-- Navigation section -->
            <TextView
                style="@style/SettingsCategoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Navigation" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/list_divider"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/nav_home"
                        style="@style/NavMenuItem"
                        android:text=" Home"
                        app:drawableStartCompat="@drawable/home" />

                    <TextView
                        android:id="@+id/nav_statistics"
                        style="@style/NavMenuItem"
                        android:text=" Statistics"
                        app:drawableStartCompat="@drawable/stat" />

                    <TextView
                        android:id="@+id/nav_backup"
                        style="@style/NavMenuItem"
                        android:text=" Backup"
                        app:drawableStartCompat="@drawable/backup" />

                    <TextView
                        android:id="@+id/nav_social"
                        style="@style/NavMenuItem"
                        android:text=" Social"
                        app:drawableStartCompat="@drawable/share" />

                    <TextView
                        android:id="@+id/nav_setting"
                        style="@style/NavMenuItem"
                        android:text=" Setting"
                        app:drawableStartCompat="@drawable/settings" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom actions: night mode + logout -->
            <TextView
                style="@style/SettingsCategoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="Account" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:id="@+id/ll_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_user_avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="User Avatar"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:text="Avinash"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom actions: night mode + logout -->
            <TextView
                style="@style/SettingsCategoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="General" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/ll_bottom_actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Night mode row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="16dp"
                            android:text=" Theme"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:drawableStartCompat="@drawable/night" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Logout -->
                    <TextView
                        android:id="@+id/tv_logout"
                        style="@style/NavMenuItem"
                        android:text=" Exit"
                        android:textColor="?attr/colorError"
                        app:drawableStartCompat="@drawable/log"
                        app:drawableTint="?attr/colorError" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
