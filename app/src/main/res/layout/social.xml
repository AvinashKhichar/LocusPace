<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="?attr/colorSurface"
tools:context=".Social">

<!-- Top App Bar -->
<com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar_social"
    android:layout_width="0dp"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:title="Share Run"
    app:titleTextColor="?attr/colorOnPrimary"
    app:navigationIcon="@drawable/arrow"
    app:navigationIconTint="?attr/colorOnPrimary"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Choose background button (NOT part of shared image) -->
<com.google.android.material.button.MaterialButton
    android:id="@+id/btn_choose_background"
    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="24dp"
    android:text="Choose Background"
    android:textAllCaps="false"
    app:icon="@drawable/ic_gallery"
    app:iconGravity="textStart"
    app:iconPadding="8dp"
    app:backgroundTint="#B58668"
    android:textColor="@color/black"
    app:iconTint="@color/black"
    app:layout_constraintTop_toBottomOf="@id/toolbar_social"
    app:layout_constraintStart_toStartOf="parent" />

<!-- This container is what we will SHARE -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/share_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/btn_choose_background"
    app:layout_constraintBottom_toTopOf="@id/ll_share_actions"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Background image -->
    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ganesha" />

    <!-- Dark overlay -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_social_overlay_gradient"
        app:layout_constraintTop_toTopOf="@id/iv_background"
        app:layout_constraintBottom_toBottomOf="@id/iv_background"
        app:layout_constraintStart_toStartOf="@id/iv_background"
        app:layout_constraintEnd_toEndOf="@id/iv_background" />

    <!-- Semi-transparent stats card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_share_preview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- App name / title -->
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />

            <!-- Date -->
            <TextView
                android:id="@+id/tv_run_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="19 Nov 2025"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="19 Nov 2025" />

            <!-- Big Distance -->
            <TextView
                android:id="@+id/tv_distance_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="5.20 km"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                tools:text="5.20 km" />

            <TextView
                android:id="@+id/tv_distance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Time + Avg Speed row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:32:12"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="00:32:12" />

                    <TextView
                        android:id="@+id/tv_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>

                <!-- Avg Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_speed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.7 km/h"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="9.7 km/h" />

                    <TextView
                        android:id="@+id/tv_speed_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Speed"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </LinearLayout>

            <!-- Hashtag / tagline -->
            <TextView
                android:id="@+id/tv_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="#LocusPace"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                tools:text="#LocusPace" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom share buttons -->
    <LinearLayout
        android:id="@+id/ll_share_actions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Share to Instagram -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_instagram"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Instagram"
            android:textAllCaps="false"
            android:drawablePadding="8dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@null"
            app:icon="@drawable/insta" />

        <!-- Share to other apps -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_other"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Share"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:drawablePadding="8dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@null"
            app:backgroundTint="#B58668"
            app:icon="@drawable/share" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
