<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="h4TextSize">35sp</dimen>
    <dimen name="h2TextSize">17sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>
    <dimen name="h5TextSize">30sp</dimen>


    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <!-- Dark: white / Light: black (via colorOnBackground) -->
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <!-- Slightly dimmer than main text -->
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h5">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">@dimen/h5TextSize</item>
    </style>

        <style name="SettingsCategoryHeader" parent="h2">
            <item name="android:textColor">?attr/colorPrimary</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">@dimen/h3TextSize</item>
            <item name="android:layout_marginTop">16dp</item>
            <item name="android:layout_marginStart">24dp</item>
            <item name="android:layout_marginBottom">4dp</item>
        </style>

        <style name="NavMenuItem" parent="Widget.AppCompat.TextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">56dp</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingHorizontal">16dp</item>
            <item name="android:background">?attr/selectableItemBackground</item>
            <item name="android:clickable">true</item>
            <item name="android:focusable">true</item>
            <item name="android:fontFamily">@font/poppins_light</item>
            <item name="android:textColor">?attr/colorOnSurface</item>
            <item name="android:textSize">@dimen/h2TextSize</item>
        </style>

        <style name="blueButtonStyle">
            <item name="android:background">@drawable/button</item>
            <item name="android:fontFamily">@font/poppins_thin</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/h2TextSize</item>
            <item name="android:textAllCaps">false</item>
        </style>



        <style name="DialogStyle" parent ="Theme.Design.Light.BottomSheetDialog">
            <item name="android:windowIsFloating">false</item>
            <item name="android:statusBarColor">@android:color/transparent</item>
            <item name="android:windowSoftInputMode">adjustResize</item>
        </style>

        <style name="tabLayout_text" parent="TextAppearance.AppCompat">
            <item name="color">@color/black</item>
            <item name="fontFamily">@font/sf_pro_display</item>
            <item name="textAllCaps">false</item>
            <item name="android:textStyle">bold</item>
        </style>



</resources>